extends layout

block content
  h1= title

  ul
    each author in author_list
      li
        a(href=author.url) #{author.name}
        if author.death_date_formatted
          span   #{author.birth_date_formatted}, #{author.death_date_formatted}
        else 
          span   #{author.birth_date_formatted}


    else
      li There are no authors.
